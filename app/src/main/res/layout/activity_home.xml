<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp">

            <!-- Header: Welcome + Credits -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WELCOME BACK"
                        android:textSize="11sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.1" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textSize="28sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="serif"
                        android:letterSpacing="-0.02"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Credits Badge -->
                <LinearLayout
                    android:id="@+id/layoutCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_credits_badge"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸª™"
                        android:textSize="14sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/cohort_gold"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Circle Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Sparkle Icon -->
                <View
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_icon"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCircleName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="January Circle"
                        android:textSize="20sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="serif" />

                    <TextView
                        android:id="@+id/tvCircleCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kochi"
                        android:textSize="12sp"
                        android:textColor="@color/muted_foreground" />
                </LinearLayout>

                <!-- Status Badge -->
                <TextView
                    android:id="@+id/tvCircleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FORMING"
                    android:textSize="11sp"
                    android:textColor="@color/cohort_status_open"
                    android:background="@drawable/bg_status_forming"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:letterSpacing="0.05"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Circle Description -->
            <TextView
                android:id="@+id/tvCircleDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circle closes in 2 days"
                android:textSize="14sp"
                android:textColor="@color/muted_foreground"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="24dp" />

            <!-- Dots Grid - Separate Male/Female Rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_dots_container"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Male Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="MALE"
                        android:textSize="10sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvMaleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/25"
                        android:textSize="12sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/gridMaleDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="10"
                    android:layout_marginBottom="16dp" />

                <!-- Female Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="FEMALE"
                        android:textSize="10sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.1"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvFemaleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/25"
                        android:textSize="12sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/gridFemaleDots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="10" />
            </LinearLayout>

            <!-- Stats Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:layout_marginBottom="24dp">

                <!-- In Circle -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvInCircle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IN CIRCLE"
                        android:textSize="10sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/border" />

                <!-- Spots Open -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvSpotsOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textSize="20sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPOTS OPEN"
                        android:textSize="10sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.05" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:background="@color/border" />

                <!-- Until Close -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvDaysLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2d"
                        android:textSize="20sp"
                        android:textColor="@color/foreground"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UNTIL CLOSE"
                        android:textSize="10sp"
                        android:textColor="@color/muted_foreground"
                        android:letterSpacing="0.05" />
                </LinearLayout>
            </LinearLayout>

            <!-- Join CTA -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnJoinCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:text="Enter the Circle â€¢ 10 credits"
                android:textSize="15sp"
                android:textAllCaps="false"
                app:cornerRadius="14dp"
                app:backgroundTint="@color/primary"
                android:layout_marginBottom="32dp" />

            <!-- View Circle Button (when already joined) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:text="View Your Circle"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:visibility="gone"
                style="@style/Cohort.Button.Secondary"
                android:layout_marginBottom="32dp" />

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="@color/border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR JOURNEY"
                    android:textSize="11sp"
                    android:textColor="@color/muted_foreground"
                    android:letterSpacing="0.1"
                    android:paddingHorizontal="16dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="@color/border" />
            </LinearLayout>

            <!-- Past Circles (empty state) -->
            <TextView
                android:id="@+id/tvNoHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your past Circles will appear here once you complete one."
                android:textSize="13sp"
                android:textColor="@color/muted_foreground"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Past Circle Cards Container -->
            <LinearLayout
                android:id="@+id/layoutPastCircles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />

            <!-- Footer Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Each Circle runs on its own timeline. When it closes, you'll receive curated connections based on genuine compatibility."
                android:textSize="12sp"
                android:textColor="@color/muted_foreground"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_nav_menu"
        app:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
