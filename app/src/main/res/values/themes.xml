<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Cohort Theme - Modern Editorial, Calm, Confident -->
    <style name="Theme.Cohort" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color - Terracotta -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        
        <!-- Secondary brand color - Warm Sand -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/border</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/card</item>
        <item name="colorOnSurface">@color/foreground</item>
        
        <!-- Error -->
        <item name="colorError">@color/destructive</item>
        <item name="colorOnError">@color/destructive_foreground</item>
        
        <!-- Status bar - Light with dark icons -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/foreground</item>
        <item name="android:textColorSecondary">@color/muted_foreground</item>
        
        <!-- EditText / Input styling -->
        <item name="editTextStyle">@style/Cohort.EditText</item>
        <item name="textInputStyle">@style/Cohort.TextInputLayout</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Cohort.Button</item>
    </style>
    
    <!-- Cohort EditText Style -->
    <style name="Cohort.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:textColorHint">@color/muted_foreground</item>
    </style>
    
    <!-- Cohort TextInputLayout Style -->
    <style name="Cohort.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_background</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="hintTextColor">@color/muted_foreground</item>
    </style>
    
    <!-- Cohort Primary Button -->
    <style name="Cohort.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">14dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/primary</item>
    </style>
    
    <!-- Cohort Secondary/Outline Button -->
    <style name="Cohort.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <!-- Cohort Text Button (for links) -->
    <style name="Cohort.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/muted_foreground</item>
    </style>
</resources>
